<h1>Posts</h1>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <strong>
          <%= post.caption %>
        </strong>
        <strong>- <%= link_to post.user, post.user %></strong>
        <p class="image">
          <%= link_to image_tag(post.image.url :preview), post %>
        </p>
        <p>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
